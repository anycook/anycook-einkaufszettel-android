<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.anycook.einkaufszettel">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@drawable/anycook"
            android:logo="@drawable/anycook_transparent"
            android:theme="@style/Theme.AnycookTheme">

        <activity android:name="de.anycook.einkaufszettel.activities.MainActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity android:name="de.anycook.einkaufszettel.activities.AddIngredientsActivity"
                  android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="de.anycook.einkaufszettel.activities.MainActivity"/>
        </activity>
    </application>
</manifest>
