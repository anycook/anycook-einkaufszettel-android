<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        card_view:cardElevation="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/recipe_row_imageview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/anycook"
                android:scaleType="centerCrop"
                android:contentDescription="@string/image_description"
                android:transitionName="@string/recipe_transition"/>

        <TextView
                android:id="@+id/recipe_row_textview_recipe_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="16dp"
                android:textAppearance="@style/TextAppearanceAnycook.Display1.Light"
                android:background="@drawable/typo_gradient_background"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>