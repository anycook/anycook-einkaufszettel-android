<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/grocery_item_row_relativelayout_front"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:background="?android:attr/activatedBackgroundIndicator">

    <ImageView
            android:id="@+id/drawer_list_item_imageview"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/icon"/>

    <TextView
            android:id="@+id/drawer_list_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/drawer_list_item_imageview"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:text="@string/drawer_text"
            android:maxLines="1"
            android:ellipsize="end"/>

</RelativeLayout>


