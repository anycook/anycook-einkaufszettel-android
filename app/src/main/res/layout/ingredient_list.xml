<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <EditText
            android:id="@+id/ingredient_list_textview_ingredient"
            android:layout_toLeftOf="@+id/ingredient_list_textview_amount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ingredient_hint"
            android:singleLine="true"
            android:gravity="left"
            android:inputType="textAutoComplete|textCapWords"
            android:imeOptions="actionNext"/>

    <EditText
            android:id="@id/ingredient_list_textview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:hint="@string/amount_hint"
            android:gravity="right"
            android:inputType="number|textPostalAddress"
            android:imeOptions="actionDone"/>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ingredient_list_listview"
              android:layout_below="@id/ingredient_list_textview_ingredient"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

</RelativeLayout>