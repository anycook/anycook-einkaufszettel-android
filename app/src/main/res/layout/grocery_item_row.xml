<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/grocery_item_row_relativelayout_front"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
    <TextView
            android:id="@+id/grocery_item_row_textview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="italic"/>
    <TextView
            android:id="@+id/grocery_item_row_textview_grocery_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_toLeftOf="@id/grocery_item_row_textview_amount"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="italic"/>
    <View
            android:id="@+id/grocery_item_row_view_stroke"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/any_gray_dark"
            android:layout_marginTop="16dp"/>
</RelativeLayout>