<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

    <EditText
            android:id="@+id/ingredient_row_edit_textview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text=""
            android:gravity="right"/>

    <EditText
            android:id="@+id/ingredient_row_edit_textview_ingredient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ingredient_row_edit_textview_amount"
            android:text=""
            android:maxLines="1"
            android:gravity="left"
            android:inputType="text"/>

    <View
            android:id="@+id/ingredient_row_edit_view_stroke"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="16dp"/>

</RelativeLayout>