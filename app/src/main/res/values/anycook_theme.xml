<resources>

  <style name="Theme.AnycookTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/any_white_gray</item>
    <item name="colorPrimaryDark">@color/any_green_dark</item>
    <item name="android:actionBarStyle">@style/ActionBarAnycook</item>
    <item name="android:listPreferredItemHeight">25sp</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListViewAnycook</item>
    <item name="android:dropDownItemStyle">@style/DropDownItemAnycook</item>
    <item name="android:textAppearance">@style/TextAppearanceAnycook</item>
    <item name="android:textAppearanceSmall">@style/TextAppearanceAnycook.Body1</item>
    <item name="android:textAppearanceMedium">@style/TextAppearanceAnycook.Title</item>
    <item name="android:textAppearanceLarge">@style/TextAppearanceAnycook.Large</item>
    <item name="android:editTextStyle">@style/TextAppearanceAnycook.EditText</item>
    <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
  </style>

  <style name="AnycookActionBarWidgetTheme">
    <item name="android:textColor">@color/any_white_gray</item>
    <item name="android:editTextColor">@color/any_white_gray</item>
    <item name="android:textColorHint">@color/any_green_light</item>
  </style>

  <style name="TextAppearanceAnycook" parent="@android:style/TextAppearance">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textColor">@color/any_gray_dark</item>
  </style>

  <style name="TextAppearanceAnycook.Strong" parent="TextAppearanceAnycook">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="DropDownListViewAnycook">
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">5dp</item>
  </style>

  <style name="DropDownItemAnycook">
    <item name="android:fontFamily">sans-serif-light</item>
  </style>

  <style name="TextAppearanceAnycook.Body1" parent="@style/TextAppearanceAnycook">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextAppearanceAnycook.Body1.Strong" parent="@style/TextAppearanceAnycook">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="TextAppearanceAnycook.Title" parent="@style/TextAppearanceAnycook">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="TextAppearanceAnycook.Title2" parent="@style/TextAppearanceAnycook.Title">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="TextAppearanceAnycook.Large" parent="@style/TextAppearanceAnycook">
    <item name="android:textSize">24sp</item>
  </style>

  <style name="TextAppearanceAnycook.Body2" parent="@style/TextAppearanceAnycook.Body1">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="TextAppearanceAnycook.Display1" parent="@style/TextAppearanceAnycook">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textSize">34sp</item>
  </style>

  <style name="TextAppearanceAnycook.Display1.Light" parent="@style/TextAppearanceAnycook.Display1">
    <item name="android:textColor">@color/any_white_gray</item>
  </style>

  <style name="TextAppearanceAnycook.Headline" parent="@style/TextAppearanceAnycook">
    <item name="android:textSize">24sp</item>
  </style>

  <style name="TextAppearanceAnycook.Headline.Light" parent="TextAppearanceAnycook.Headline">
    <item name="android:textColor">@color/any_white_gray</item>
  </style>

  <style name="TextAppearanceAnycook.Subheading" parent="@style/TextAppearanceAnycook">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="TextAppearanceAnycook.Subheading.Light" parent="TextAppearanceAnycook.Subheading">
    <item name="android:textColor">@color/any_white_gray</item>
  </style>

  <style name="TextAppearanceGuideText" parent="@style/TextAppearanceAnycook">
    <item name="android:textSize">30sp</item>
  </style>

  <style name="TextAppearanceAnycook.EditText" parent="@android:style/Widget.EditText">
    <item name="android:gravity">center</item>
  </style>

  <style name="ActionBarAnycook" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">@color/any_green</item>
    <item name="android:textColor">@color/any_white_gray</item>
    <item name="android:textColorHint">@color/any_white_gray</item>
    <item name="android:titleTextStyle">@style/ActionBarTitleTextAnycook</item>
  </style>

  <style name="ActionBarAnycook.PopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
    <item name="android:popupBackground">@color/any_white_gray</item>
  </style>

  <style name="ActionBarTitleTextAnycook" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textColorPrimary">@color/any_white_gray</item>
    <item name="android:textColor">@color/any_white_gray</item>
    <item name="android:textColorHint">@color/any_white_gray</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="DrawerStyle">
    <item name="android:background">@drawable/list_activated_background</item>
    <item name="android:padding">5dp</item>
  </style>

  <style name="Theme.AnycookTheme.TransparentStatusBar" parent="Theme.AnycookTheme">
  </style>

  <style name="ActionBarAnycook.Translucent" parent="ActionBarAnycook">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="Theme.AppCompat.Translucent" parent="Theme.AnycookTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:actionBarStyle">@style/ActionBarAnycook</item>
    <item name="colorPrimaryDark">@color/dark_headline</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowAnimationStyle">@style/Animation.TransparentActivity</item>
  </style>

  <style name="Animation.TransparentActivity" parent="android:Animation.Activity">
    <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    <item name="android:windowExitAnimation">@anim/fade_out</item>
  </style>

  <style name="Animation.SlideInOut" parent="android:Animation.Activity">
    <item name="android:windowEnterAnimation">@anim/slide_in</item>
    <item name="android:windowExitAnimation">@anim/slide_out</item>
  </style>

</resources>
