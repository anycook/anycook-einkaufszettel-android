<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AnycookTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarAnycook</item>
        <item name="android:actionBarWidgetTheme">@style/AnycookActionBarWidgetTheme</item>
        <item name="android:textAppearance">@style/TextAppearanceAnycook</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceAnycook.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceAnycook.Medium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceAnycook.Large</item>
        <item name="android:editTextStyle">@style/TextAppearanceAnycook.EditText</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="searchViewSearchIcon">@drawable/ic_action_search</item>
    </style>

    <style name="AnycookActionBarWidgetTheme">
        <item name="android:textColor">@color/any_white_gray</item>
        <item name="android:editTextColor">@color/any_white_gray</item>
        <item name="android:textColorHint">@color/any_green_light</item>
    </style>

    <style name="TextAppearanceAnycook" parent="@android:style/TextAppearance">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/any_gray_dark</item>
    </style>

    <style name="TextAppearanceAnycook.Small" parent="@style/TextAppearanceAnycook">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearanceAnycook.Medium" parent="@style/TextAppearanceAnycook">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearanceAnycook.Large" parent="@style/TextAppearanceAnycook">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearanceGuideText" parent="@style/TextAppearanceAnycook">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearanceAnycook.EditText" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center</item>
    </style>

    <style name="ActionBarAnycook" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/bg_texture</item>
        <item name="android:textColor">@color/any_white_gray</item>
        <item name="android:textColorHint">@color/any_white_gray</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextAnycook</item>
    </style>

    <style name="ActionBarTitleTextAnycook"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/any_white_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerStyle">
        <item name="android:activatedBackgroundIndicator">@color/any_green_header</item>
    </style>

</resources>