<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
            android:radius="8dp"/>
    <solid
        android:color="@color/any_white_background"/>

    <gradient
            android:angle="270"
            android:centerY="80%"
            android:centerColor="@color/any_white_background"
            android:startColor="@color/any_white_background"
            android:endColor="@color/any_white_pushed_button_background"
            android:type="linear"
            />

    <stroke
            android:width="1dp"
            android:color="@color/any_gray_inactive_button_outline"/>

    <padding
            android:left="15dp"
            android:right="15dp"
            android:top="15dp"
            android:bottom="15dp"/>

</shape>